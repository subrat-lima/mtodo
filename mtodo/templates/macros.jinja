{% macro flask_flash_messages() %}
{% with messages = get_flashed_messages(with_categories=true) %}
{% if messages %}
{% for category, message in messages %}
    <div class="{{ category }} message">
        <span>{{ message }}</span>
        <button onclick="this.parentNode.remove()">âœ–</button>
    </div>
{% endfor %}
{% endif %}
{% endwith %}
{% endmacro %}

{% macro render_nav_link(endpoint, text) %}
<li>
    {% if request.endpoint == endpoint %}
    <a href="{{ url_for(endpoint) }}" aria-current="page">{{ text }}</a>
    {% else %}
    <a href="{{ url_for(endpoint) }}">{{ text }}</a>
    {% endif %}
</li>
{% endmacro %}
